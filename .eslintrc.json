{
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": [
    "react-hooks"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": [
      "./tsconfig.json"
    ]
  },
  "ignorePatterns": [
    ".eslintrc.json"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "rules": {
        "no-shadow": "off",
        "no-undef": "off"
      }
    }
  ],
  "rules": {
    "max-len": [
      "warn",
      {
        "code": 108
      }
    ],
    "quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "react/jsx-curly-spacing": [
      "error",
      {
        "children": true
      }
    ],
    "react/jsx-indent": [
      "error",
      2
    ],
    "template-curly-spacing": "error",
    "semi": "error"
  }
}
